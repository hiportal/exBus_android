<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullHeightDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="DialogText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">14sp</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="noticeText">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>
    <style name="noticeTextTab">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">25sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">30dp</item>
    </style>
    <style name="normalTextBold">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">15sp</item>
        <item name="android:typeface">serif</item>
    </style>
    <style name="normalText">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">15sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>
    <style name="tabTextBold">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">25sp</item>
        <item name="android:typeface">serif</item>
    </style>
    <style name="tabText">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">25sp</item>
        <item name="android:typeface">serif</item>
    </style>
    <style name="tabMenuText">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">23sp</item>
        <item name="android:typeface">serif</item>
    </style>
    <style name="title">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">19sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:gravity">center_vertical|center</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>

    </style>
    <style name="titleTab">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:gravity">center_vertical|center</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>

    </style>

    <style name="normalTextWhite">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">15sp</item>
        <item name="android:typeface">serif</item>
    </style>



    <style name="tabTextWhite">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">22sp</item>
        <item name="android:typeface">serif</item>
    </style>
    <style name="tabTextWhiteTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">26sp</item>
        <item name="android:typeface">serif</item>
    </style>
    <style name="tabTextWhiteTitle1">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">35sp</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="DialogText.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#52c0ff</item>
        <item name="android:typeface">serif</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="paddingNormal">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">center_vertical|center</item>
    </style>

    <style name="paddingContent">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>
</resources>